<Window x:Class="adventi_kalendarium.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:adventi_kalendarium"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <TextBlock x:Name="textBlock" DockPanel.Dock="Bottom" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" Margin="10" TextAlignment="Center" />
        <Grid x:Name="mainGrid" />
    </DockPanel>
</Window>
